<% layout('layouts/boilerplate') %>
    <div class="row d-flex justify-content-center">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-lg-6 shadow p-3" style="border-radius: 10px;">
            <form action="/campgrounds/<%=id%>?_method=PUT" method="post" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3"><label class="form-label" for="title">Title -</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" value="<%=title %>"
                        required>
                    <div class="invalid-feedback">
                        Required!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Price -</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="number" class="form-control" id="price" value="<%=price %>" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" required>
                        <div class="invalid-feedback">
                            Required!
                        </div>
                    </div>
                </div>

                <div class="mb-3"><label class="form-label" for="location">Location -</label>
                    <input class="form-control" type="text" id="location" name="campground[location]"
                        value="<%=location %>" required>
                    <div class="invalid-feedback">
                        Required!
                    </div>
                </div>

                <!-- <div class="mb-3"><label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="campground[image]" value="<%=image %>"
                        required>
                    <div class="invalid-feedback">
                        Required!
                    </div>
                </div> -->

                <div class="mb-3">
                    <label class="form-label" for="image">Add Image - </label>
                    <input type="file" name="campground[image]" id="image" class="form-control" multiple>
                    <div class="invalid-feedback">
                        Required!
                    </div>
                </div>
                <span>Remove Image -</span>
                <div class="mb-3 mt-2 d-flex">
                    <% image.forEach((img , i)=> { %>
                        <div class="d-flex flex-column align-items-center">
                            <img src="<%=img.path %>" alt="" style="width: 80px; height: 80px;" class="mx-1">
                            <div class="form-check-inline">
                                <input type="checkbox" id="img-<%=i%>" class="checkbox" name="deleteImages[]" value="<%=img.name%>">
                            </div>
                        </div>
                        <% }); %>
                </div>


                <div class="mb-3"><label class="form-label" for="description">Description -</label>
                    <textarea class="form-control" name="campground[description]" id="description" rows="5"
                        required><%=description %></textarea>
                    <div class="invalid-feedback">
                        Required!
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <button class="btn btn-info py-1 px-2">Update</button>
                    <a class="btn btn-outline-dark btn-sm" href="/campgrounds/<%=id%>">Go Back</a>
                </div>
            </form>
        </div>
    </div>