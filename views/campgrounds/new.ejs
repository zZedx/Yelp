<% layout('layouts/boilerplate') %>
    <div class="row d-flex justify-content-center">
        <h1 class="text-center">New Campground</h1>
        <div class="col-lg-6 shadow p-3" style="border-radius: 10px;">
            <form action="/campgrounds" method="post" class="validated-form" enctype="multipart/form-data" novalidate>
                <div class="mb-3"><label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]"
                        placeholder="Sky Ghost Town" required>
                    <div class="invalid-feedback">
                        Required!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="number" class="form-control" id="price" placeholder="20" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" required>
                            <div class="invalid-feedback">
                                Required!
                            </div>
                        </div>
                </div>

                <div class="mb-3"><label class="form-label" for="location">Location </label>
                    <input class="form-control" type="text" id="location" name="campground[location]"
                        placeholder="New York" required>
                    <div class="invalid-feedback">
                        Required!
                    </div>
                </div>

                <!-- <div class="mb-3"><label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="campground[image]"
                        placeholder='"https://abcd/abcd"' required>
                    <div class="invalid-feedback">
                        Required!
                    </div>
                </div> -->

                <div class="mb-3">
                    <label class="form-label" for="image">Add Image</label>
                    <input type="file" name="campground[image]" id="image" class="form-control" required multiple>
                    <div class="invalid-feedback">
                        Required!
                    </div>
                </div>

                <div class="mb-3"><label class="form-label" for="description">Description</label>
                    <textarea class="form-control" name="campground[description]" id="description" rows="5"
                        required></textarea>
                    <div class="invalid-feedback">
                        Required!
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <button class="btn btn-success py-1 px-2">Submit</button>
                    <a class="btn btn-outline-dark btn-sm" href="/campgrounds">Go Back</a>
                </div>
            </form>
        </div>
    </div>